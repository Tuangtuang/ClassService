.container{
  display: flex;
  flex-direction: column;
  height: 100%;
  padding: 0;
  box-sizing: border-box;
  background-color: #fff;

}

.msg-item {
  width: 100%;
  height: 150rpx;
  position: relative;
  left:0;
  top:0;
  overflow: hidden;
  border-bottom: solid 1px lightgray;
}

.msg {
  width: 100%;
  height: 150rpx;
  left:0;
  top:0;
  z-index: 100;

}

.header-img {
  position: absolute;
  width: 110rpx;
  height: 110rpx;
  left: 20rpx;
  top: 20rpx;
  border-radius: 10%;
}



.user-name {
  position: absolute;
  float: right;
  left: 150rpx;
  top: 20rpx;
}


.msg-menu {
  position: absolute;
  width: 100%;
  height: 150rpx;
  left:0;
  top:0;
  z-index: 0;
}
