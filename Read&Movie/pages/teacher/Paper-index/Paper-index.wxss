@import "../../../style/weui.wxss";

page, .page, .page__bd {
  height: 100%;
}

.page {
  background-color: whitesmoke;
}

.page__bd {
  padding-bottom: 0;
  background-color: whitesmoke;
}

.weui-navbar {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  position: absolute;
  z-index: 500;
  top: 0;
  width: 100%;
  border-bottom: 1rpx solid #ccc;
  background-color: whitesmoke;
  height: 8%;
}

.weui-tab__content {
  padding-top: 10px;
  text-align: center;
}

textarea {
  width: 700rpx;
  padding: 25rpx 0;
}

.textarea-wrp {
  background-color: #fff;
}

.page-section {
  width: 100%;
  margin-bottom: 60rpx;
  padding-top:70rpx;

}

.page-section:last-child {
  margin-bottom: 0;
}

.page-section-title {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 10rpx;
  padding-left: 5rpx;
  padding-right: 30rpx;
  width: 20%;
}

.choice {
  margin-left: 20rpx;
}

.radio {
  display: block;
}

.radio-group {
  width: 100%;
}

.choice-container {
  display: flex;
  flex-direction: row;
  margin-right: 20rpx;
}

.choice-wrp {
  background-color: #fff;
}

.bottom-button {
  margin-top: 0rpx;
  display: flex;
  flex-direction: row;
}

.button-color {
  background-color: white;
  width: 50%;
  margin-right: 0rpx;
}

.float-button {
  width: 100%;
  color: white;
  position: fixed;
  bottom: 0;
  background-color: grey;
  opacity: 1;
}

.button-style {
  background-color: whitesmoke;
  opacity: 100;
}

.page {
  background-color: #fff;
}

.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

/*对话框 */

.commodity_attr_box {
  height: 100%;
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  margin-right: 1000rpx;
  margin-left: 20rpx;
  width: 95%;
}

.Multiple-Choice {
  word-break: break-all;
  margin-right: 20rpx;
  margin-left: 20rpx;
}

.inner-Questions {
  word-break: break-all;
  margin-right: 20rpx;
  margin-left: 20rpx;
}
