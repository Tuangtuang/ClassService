<view class='container' >

  <!--登陆界面-->
  <view class='login-icon'>
    <image class='login-img' src='/images/logintop.jpg'></image>
  </view>

  <view class='login-form' >

    <!--账号-->
    <form bindsubmit="formSubmit">
    <view class='inputView'>
      <label class='loginLab'>学号:</label>
      <input class="inputText" placeholder='Input your number ' bindinput="numInput"name='ID' value='{{check}}'></input>
    </view>

    <view class='line'></view>

    <!--密码-->
    <view class='inputView'>
      <label class='loginLab'>密码:</label>
      <input class="inputText" password="true" placeholder='Input your password'  bindinput="pwInput" name='code' value='{{check}}'></input>
    </view>

<!--按钮-->
    <view class='loginBtnView'>
      <button class="loginBtn" formType="submit" type="primary" bindtap="login" >登陆/注册</button>
    </view>
    </form>
    

  </view>
  
</view>




