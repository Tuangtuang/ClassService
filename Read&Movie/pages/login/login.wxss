page{
  height: 100%;
}

.container{
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
  background-color: #fff;
  
}

.login-icon{
  flex: none;
}

.login-img{
  width: 750rpx;
  height:500rpx;
}

.login-form{
  margin-top: 10px;
  flex: auto;
  height: 100%;
}

.inputView{
  display: flex;
  flex-direction: row;
  align-items: left;
  margin-bottom: 10rpx;
  font-family: SimSun;
  background-color: #fff;
  line-height: 44px;
}

.loginLab{
  width:100rpx;
  margin-left: 50rpx;
}


.inputText{
  flex: block;
  text-align:right;
  margin-top:11px;
  margin-right: 22px;
  display: inline-block;
  font-size: 14px;

}

.line{
  width: 100%;  
  height: 1px;  
  background-color: gray;  
  margin-top: 1px;  
}

.loginBtnView {  
  width: 100%;  
  height: auto;  
  background-color: #fff;  
  margin-top: 0px;  
  margin-bottom: 0px;  
  padding-bottom: 0px;  
}  
  
.loginBtn {  
  width: 80%;  
  margin-top: 35px;  
}  

