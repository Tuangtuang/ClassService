.container{
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #ededed;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  
}

.icon{
  width: 80rpx;
  height: 80rpx;
  margin-left: 20rpx;
  vertical-align: middle;
}


.button{
  
  height: 100rpx;
  margin-left: 20rpx;
  margin-right: 40rpx;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}

.first-line{
  display: flex;
  flex-direction: row;
  

}


.second-line{
  display: flex;
  flex-direction: row;
}

.third-line{
  display: flex;
  flex-direction: row;
}

.class-name{
  vertical-align: middle;
  margin-left: 40rpx;
  font-size: 50rpx;
  width: 60%;
  color: #131212;
}

.teacher{
  color: gray;
  margin-left: 150rpx;
  margin-bottom: 20rpx;
  font-size: 30rpx;
}

.Num{

  margin-left: 150rpx;
  font-size: 30rpx;
  color: gray;
}

.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
/*对话框 */
.commodity_attr_box {
  height: 300rpx;
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
}

.link-type{
  font-size: 50rpx;
  justify-content: center;
}

.text{
  margin-right: 30rpx;
  color: #ce3c31;
  vertical-align: middle;
  margin-top: 10rpx;

}

